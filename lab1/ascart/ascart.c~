#include <stdlib.h>
#include <string.h>
#include <stdio.h>
#include "font.h"

#define asc2idx(asc) (asc-32)

#define SCREEN_WIDTH 80
int main(int argc, char **argv) {
	int line, arg;
	for(line = 0; line != SYMBOL_HEIGHT; ++line) {
		for(arg = 1; arg != argc; ++arg) {
			char *c = argv[arg];
			while(*c) { 
				printf("%s", alphabet[asc-32(*c)][line]);
				++c;
			}
			if(iarg!=argc-1)
				printf("%s", alphabet[asc-32(' ')][line]);
		}	
		printf("\n");
	}
	return 0;
}
